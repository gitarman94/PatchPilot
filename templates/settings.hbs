{{> navbar }}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Settings - PatchPilot</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <main class="container">
    <h1>Settings</h1>

    <section>
      <h2>Users</h2>
      <table>
        <thead>
          <tr><th>ID</th><th>Username</th><th>Role</th></tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.username}}</td>
              <td>{{this.role}}</td>
            </tr>
          {{/each}}
          {{#unless users}}
            <tr><td colspan="3">No users configured.</td></tr>
          {{/unless}}
        </tbody>
      </table>
    </section>

    <section>
      <h2>Server Settings</h2>
      <dl>
        {{#each settings}}
          <dt>{{@key}}</dt><dd>{{this}}</dd>
        {{/each}}
      </dl>
    </section>
  </main>
</body>
</html>
