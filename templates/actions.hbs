{{> navbar }}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Actions - PatchPilot</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <main class="container">
    <h1>Actions</h1>

    <table>
      <thead>
        <tr><th>ID</th><th>Type</th><th>Device</th><th>Actor</th><th>Created</th><th>TTL</th><th>Remaining</th><th>Status</th></tr>
      </thead>
      <tbody>
        {{#each actions}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.action_type}}</td>
            <td>{{this.device_hostname}}</td>
            <td>{{this.actor}}</td>
            <td>{{this.created_at}}</td>
            <td>{{this.ttl}}</td>
            <td>{{this.remaining}}</td>
            <td>{{this.status}}</td>
          </tr>
        {{/each}}
        {{#unless actions}}
          <tr><td colspan="8">No actions.</td></tr>
        {{/unless}}
      </tbody>
    </table>
  </main>
</body>
</html>
